@model List<EmployeeArrivalViewModel>
<form asp-controller="Arrival" asp-action="GetArrivalData" method="get">
	<div class="row m-5">
		<div class="col-4">
			<input type="text" class="form-control text-center" placeholder="Search by surname" name="nameSearchCriteria" style="margin-bottom: 3px;">
		</div>
		<div class="col-4">
			<div class="dropdown">
				<button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
					Sort by
				</button>
				<ul class="dropdown-menu">
					<li><input type="submit" class="form-control text-center" name="sortByCriteria" value="Role"></li>
					<li><input type="submit" class="form-control text-center" name="sortByCriteria" value="Manager Id"></li>
					<li><input type="submit" class="form-control text-center" name="sortByCriteria" value="Employee Id"></li>
				</ul>
			</div>
		</div>
	</div>
</form>
<table class="table">
	<thead class="thead-light">
		<tr>
			<th scope="col">Employee Id</th>
			<th scope="col">Forename</th>
			<th scope="col">Surname</th>
			<th scope="col">Role</th>
			<th scope="col">Teams</th>
			<th scope="col">Arrival time</th>
			<th scope="col">Manager Id</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var e in Model)
		{
			<tr>
				<th scope="row">@e.EmployeeId</th>
				<td>@e.Forename</td>
				<td>@e.Surname</td>
				<td>@e.Role</td>
				<td>@string.Join(", ",e.Teams)</td>
				<td>@e.ArrivalTime</td>
				<td>@e.ManagerId</td>
			</tr>
		}
	</tbody>
</table>